<% include ../partials/header.ejs %>

<h1>New Comment Form</h1>


<div class="container">
    <div class="col">
        <h1 style="text-align: center;">Add New Comment To <%= campground.name %></h1>
        <div style="width: 50%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    Author: <input class="form-control" type="text" value="<%=currentUser.username%>" name="comment[author][username]" readonly>
                </div>
                <div class="form-group">
                    Comment: <input class="form-control" type="text" placeholder="text" name="comment[text]">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block">Submit ttt ttt</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>



