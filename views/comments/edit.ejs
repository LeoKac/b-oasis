<% include ../partials/header.ejs %>

<h1>Editing the comment:</h1>


<div class="container">
    <div class="col">
        <h1 style="text-align: center;">Edit the comment located in <%= campground_name %></h1>
        <div style="width: 50%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <% x = "Unknown (Not Logged In)"; %>
                    <% if (currentUser) { %>
                        <% x = currentUser.username; %>
                    <% } %>
                    Author: <input class="form-control" type="text" value="<%= x %>" name="comment[author][username]" readonly>
                </div>
                <div class="form-group">
                    Comment: <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block">Submit ttt ttt</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>



