<% include ../partials/header.ejs %>


<div class="container">
    <header class="jumbotron">
        <h1>Welcome to BlackOasis</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new oasis</a>
        </p>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular Campgrounds!</h3>
        </div>
    </div>
    
    <div class="row">
        <% ca.forEach((camp) => { %>
            <div class="col-md-3 col-sm-6">
                <div class="caption text-center">
                    <img src="<%= camp.image %>" class="img-thumbnail">
                    <div>
                        <h6><%= camp.name %></h6>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>


<% include ../partials/footer.ejs %>