<% include ../partials/header.ejs %>

<div class="container">
    <div class="col">
        <h1 style="text-align: center;">Editing: <%= campground.name %></h1>
        <div style="width: 50%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01" max="999">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block">Submit ttt ttt</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>



<% include ../partials/footer.ejs %>